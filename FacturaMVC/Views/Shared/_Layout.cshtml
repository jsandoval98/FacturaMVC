<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema de Facturación</title>
    <link rel="icon" href="~/images/favico.png" type="image/icon"/>

    @*<script src="~/Scripts/jquery-3.3.1.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>*@


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    @*<link href="~/Content/fontawesome-all.css" rel="stylesheet" />
        <link href="~/Content/site.css" rel="stylesheet" type="text/css" />*@
    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />*@

    @*<script src="~/Scripts/modernizr-2.6.2.js"></script>*@

    <style>


        .bar-menu {
            display: block;
            list-style-type: none;
            float: left;
            width: 100%;
            margin: 0px 0px;
            overflow: hidden;
            background-color: #333;
        }

        .bar-menu li {
            float: left;
        }

        .bar-menu li a, .dropbtn {
            display: inline-block;
            min-width: 100px;
            padding: 3px 5px;
            color: white;
            text-align: center;
            text-decoration: none;
            font-weight: 200;
        }

        .bar-menu li a.activo {
            background-color: red;
        }

        .bar-menu li a:hover {
            background-color: red;
        }

        li.dropdown {
            display: inline-block;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

        ul.bar-menu .dropdown-content a {
            color: black;
            padding: 5px 10px;
            text-decoration: none;
            display: block;
            text-align: left;
        }

    </style>
</head>
<body>
    <div class="container2">
        <header>
            <div class="titulo">
                <div class="bar-titulo-titulo"><h1>Sistema de Facturación</h1></div>                
                <div class="bar-titulo-icon-user">
                    <img src="~/images/user.png" width="25" height="25" />
                    <div style="display:none" class="panel-opciones-user">
                        <span>Jorge Eduardo Sandoval Alvarez</span>
                        <ul>                            
                            <li><a href="/Login/Salir">Cerrar Sesion</a></li>
                            <li><a href="/Login/CambiarContrasena">Cambiar Contraseña</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <ul class="bar-menu">
                <li><a href="/Factura/Index" class="activo">Facturas</a></li>
                <li class="dropdown">
                    <a href="javascript:void(0)" class="dropbtn">Mantenimiento</a>
                    <div class="dropdown-content">
                        <a href="/Mantenimiento/Concepto">Mantenimiento de Conceptos</a>
                        <a href="#">Mantenimiento de Usuarios</a>
                    </div>
                </li>
                <li class="dropdown">
                    <a href="javascript:void(0)" class="dropbtn">Reportes</a>
                    <div class="dropdown-content">
                        <a href="/Reporte/ReporteConciliacion">Reporte de Conciliación</a>
                    </div>
                </li>
            </ul>
        </header>
        <div class="main-body">
            @RenderBody()
        </div>

        <footer>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/jqueryval")*@
    @*@Scripts.Render("~/bundles/bootstrap")*@

    @RenderSection("scripts", required: false)


    <script type="text/javascript">

        $("div .bar-titulo-icon-user img").on("click", function (e) {

            $("div .panel-opciones-user").toggle();

            //$("div .panel-opciones-user").prop("tabindex", 1);
            //$("div .panel-opciones-user").focus();


            e.stopPropagation();
            e.preventDefault();
        });

        $(document).on("click", function (e) {

            //alert("ss");

            $("div .panel-opciones-user").hide();
        });
    </script>

</body>
</html>